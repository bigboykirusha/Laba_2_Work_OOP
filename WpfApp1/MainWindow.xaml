<Window x:Class="OOPLab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOPLab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid MouseDown="myPath_MouseDown" MouseUp="myPath_MouseUp" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" SelectedIndex="0" x:Name="cbFigures" Margin="0,0,0,3">
            <TextBlock>Line</TextBlock>
            <TextBlock>Triangle</TextBlock>
            <TextBlock>Rectangle</TextBlock>
            <TextBlock>Circle</TextBlock>
            <TextBlock>Ellipse</TextBlock>
        </ComboBox>
        <Path Grid.Row="1" x:Name="myPath" Stroke="Blue">

        </Path>
    </Grid>
</Window>
